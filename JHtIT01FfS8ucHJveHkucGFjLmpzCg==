//================= Config Start ======================

// proxy config
var rules = [];
var direct = 'DIRECT;';
var defalut = direct;

// SOCKS
rules.push({
    proxy: "SOCKS5 127.0.0.1:1080; SOCKS 127.0.0.1:1080; DIRECT;",
    list: [
