rules.push({
    proxy: 'PROXY 0.0.0.0:0',
    list: [
        //'zhihu.com',
        //'v2ex.com',
        //'weibo.com',
        //'baidu.com',
    ]
});

//================= Config End ======================

// cache white list into a hash
var _rules = {};
var _proxys = [defalut];
rules.forEach(function(rule){
    var list = rule.list;
    var proxy_n = _proxys.push(rule.proxy) - 1;
    var length = list.length;
    for (var i = 0; i < length; i++){
        _rules[list[i]] = proxy_n;
    }
});

// get the root domain from a url
var extractRootDomain = function(url){
    var root_domain = url.match(/^https?\:\/\/([^\/?#]+)(?:[\/?#]|$)/i);
    return root_domain ? root_domain[1].split('.').slice(-2).join('.') : undefined;
};

// interface for PAC
var FindProxyForURL = function FindProxyForURL(url, host) {
    // alert('AAAA');
    // var root_domain = extractRootDomain;
    // return root_domain ? _proxys[ _rules[root_domain] || 0] : _proxys[0];
    return _proxys[1];
};
