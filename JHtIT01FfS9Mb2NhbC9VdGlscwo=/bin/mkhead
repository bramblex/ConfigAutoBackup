#!/usr/bin/env node

const fs = require('fs')
const path = require('path')
const [, , ...classes] = process.argv

const create_body_flag = classes.filter(key => key === '-b').length > 0

const uppercase = classname => {
}

classes.forEach(header => {
  const options = {
    namespace: null,
    classname: null,
  }

  if (/::/.test(header)) {
    const [namespace, classname] = header.split('::');
    options.namespace = namespace
    options.classname = classname
  } else {
    options.classname = classname
  }

  const header_path = path.join('./', options.classname + '.h')
  const body_path = path.join('./', options.classname + '.h')

  const header_content = `
`
})

console.log('adf_asdf'.toUpperCase())